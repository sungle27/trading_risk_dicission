# ==================================================
# BINANCE
# ==================================================
BINANCE_FUTURES_WS=wss://fstream.binance.com/stream


# ==================================================
# TELEGRAM
# ==================================================
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_CHAT_ID


# ==================================================
# RUNTIME
# ==================================================
DEBUG_ENABLED=1
HEARTBEAT_SEC=300


# ==================================================
# EMA TREND (ENTRY / DECISION)
# ==================================================
EMA_FAST=9
EMA_SLOW=26


# ==================================================
# EMA GAP (TREND STRENGTH)
# ==================================================
# EARLY: bắt chuyển động sớm
REGIME_EMA_GAP_EARLY=0.0010

# MAIN: trend phải rõ ràng
REGIME_EMA_GAP_MAIN=0.0040


# ==================================================
# VOLUME
# ==================================================
VOLUME_SMA_LEN=12

# EARLY: chỉ báo động khi có dòng tiền thật
VOLUME_RATIO_EARLY=3.0

# MAIN: volume phải rất mạnh
VOLUME_RATIO_MAIN=5.5

ENABLE_VOLUME=1


# ==================================================
# SPREAD FILTER (LIQUIDITY RISK)
# ==================================================
ENABLE_SPREAD=1
ENABLE_SPREAD_ADVANCED=1

# EARLY: cho spread rộng hơn
SPREAD_MAX_EARLY=0.006

# MAIN: spread phải chặt
SPREAD_MAX_MAIN=0.003

# fallback (nếu không dùng advanced)
SPREAD_MAX=0.004


# ==================================================
# COOLDOWN (ANTI-SPAM / OVERTRADING)
# ==================================================
COOLDOWN_SEC_EARLY=180
COOLDOWN_SEC_MAIN=1200


# ==================================================
# FOLLOW THROUGH (ANTI FAKE BREAKOUT)
# ==================================================
ENABLE_FOLLOW_THROUGH=1

FOLLOW_THROUGH_BARS_EARLY=2
FOLLOW_THROUGH_BARS_MAIN=4


# ==================================================
# WICK FILTER (ANTI TRAP)
# ==================================================
ENABLE_WICK_FILTER=1

# EARLY: cho phép wick dài hơn
WICK_MAX_RATIO_EARLY=0.45

# MAIN: candle phải sạch
WICK_MAX_RATIO_MAIN=0.30


# ==================================================
# MOMENTUM FILTER
# ==================================================
ENABLE_MOMENTUM=1

MOMENTUM_MIN_EARLY=0.003
MOMENTUM_MIN_MAIN=0.007


# ==================================================
# ATR COMPRESSION (PRE-BREAKOUT LOGIC)
# ==================================================
ENABLE_ATR_COMPRESSION=1

ATR_SHORT=5
ATR_LONG=20

# ATR(5) < RATIO * ATR(20)
ATR_COMPRESSION_RATIO=0.70


# ==================================================
# MARKET REGIME / PANIC PROTECTION (BTC / ETH)
# ==================================================

# Panic detection (1H)
# ATR(5)/ATR(20) >= ratio  => panic
PANIC_ATR_RATIO=1.6

# 1H dump % (close-open)/open
PANIC_DROP_PCT=0.03

# Recovery khi volatility hạ nhiệt
RECOVERY_ATR_RATIO=1.15


# ==================================================
# TREND / RANGE DETECTION (4H)
# ==================================================
TREND_EMA_FAST=20
TREND_EMA_SLOW=50
TREND_GAP_MIN=0.0015

# RANGE nếu volatility thấp
RANGE_ATR_MAX=0.006
RANGE_GAP_MAX=0.0010


# ==================================================
# SCORING THRESHOLDS
# ==================================================
SCORE_MIN_EARLY=6
SCORE_MIN_MAIN=10

# Khi PANIC, MAIN SHORT phải rất chắc
SCORE_MIN_MAIN_PANIC=13

# HIGH CONF
SCORE_HIGH_CONF=14
